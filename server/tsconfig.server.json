{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["index.ts", "routes/**/*.ts", "storage/**/*.ts"],
  "exclude": [
  "node_modules",
  "dist",
  "**/*.test.ts",
  "**/*.spec.ts",
  "**/replicAuth.ts",
  "**/replicateAuth.ts",
  "**/vite.config.ts",
  "**/shared/**",
  "**/client/**"
]
}
