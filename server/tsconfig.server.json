{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "../dist/server",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ]
}
