modules = ["nodejs-20"]

[nix]
channel = "stable-25_05"

[workflows]

[[workflows.workflow]]
name = "Run"
mode = "sequential"
author = 45909031

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 24678
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 38443
externalPort = 3000

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "vite build --config vite.build.config.ts && npx esbuild server/index.ts --bundle --platform=node --format=esm --outfile=dist/server/index.js --packages=external"]
